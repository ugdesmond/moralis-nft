{
  "compilerOptions": {
    "module": "CommonJS", // Ensure this is set to CommonJS
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true, // This allows default imports from CommonJS modules
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
  "include": ["src/**/*"], // Ensure your source files are included
  "exclude": ["node_modules"]
}
